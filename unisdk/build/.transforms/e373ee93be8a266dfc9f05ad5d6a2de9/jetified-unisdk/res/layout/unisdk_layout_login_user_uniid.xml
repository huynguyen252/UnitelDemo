
                                                        

    

                                           

                 
                            
                                                                
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        android:padding="20dp" android:tag="layout/unisdk_layout_login_user_uniid_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_view_login"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/viewRoot"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:tag="binding_1">

                <include layout="@layout/unisdk_layout_header_logo_uniid"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/unisdk_login"
                    android:tag="unisdk_login"
                    android:textAllCaps="true"
                    android:textColor="@color/orangeApp"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvDesc"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/unisdk_user_your_uniid_account"
                    android:tag="unisdk_user_your_uniid_account"
                    android:textColor="@color/textColorUnitel"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_phone_email_username"
                        android:tag="unisdk_phone_email_username"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutName"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_border_edittext_10dp"
                        android:gravity="center"
                        app:hintEnabled="false"
                        app:suffixTextColor="@color/colorButton">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userName"
                            android:theme="@style/WidgetTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/unisdk_hint_phone_email_username"
                            android:tag="binding_2"                       
                            android:inputType="textPersonName"
                            android:maxLength="324"
                                                                 
                            android:textSize="@dimen/_14sdp"
                            app:hintEnabled="false" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtNameError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/colorButton"
                        android:visibility="gone"
                        android:textSize="@dimen/_12sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/lnLayoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_password"
                        android:tag="unisdk_password"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_border_edittext_10dp"
                        android:gravity="center"
                        app:hintEnabled="false"
                        app:suffixTextColor="@color/colorButton"
                        app:passwordToggleDrawable="@drawable/password"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPass"
                            android:theme="@style/WidgetTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@null"
                            android:background="@null"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/unisdk_hint_password"
                            android:tag="binding_3"           
                            android:inputType="textPassword"
                            android:maxLength="32"
                                                                 
                            android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtPasswordError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/colorButton"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_phone_number"
                        android:tag="unisdk_phone_number"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_border_edittext_10dp"
                        android:gravity="center"
                        app:hintEnabled="false"
                        app:suffixTextColor="@color/colorButton">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:theme="@style/WidgetTheme"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:id="@+id/edtPhoneNumber"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/unisdk_hint_phone_number"
                            android:tag="binding_4"               
                            android:inputType="phone"
                            android:maxLength="13"
                                                              
                            android:textSize="@dimen/_14sdp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtPhoneNumberError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorButton"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_otp_code"
                        android:tag="unisdk_otp_code"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/OTPLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_border_edittext_10dp"
                        android:gravity="center"
                        app:hintEnabled="false"
                        app:suffixTextColor="@color/colorButton">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/WidgetTheme"
                            android:background="@null"
                            android:id="@+id/edtOtp"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/unisdk_hint_otp_code"
                            android:tag="binding_5"           
                            android:inputType="number"
                            android:maxLength="6"
                                                            
                            android:textSize="@dimen/_14sdp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtOtpError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorButton"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLoginWithOTP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtLoginWithPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:gravity="left|center_vertical"
                            android:text="@string/unisdk_login_with_password"
                            android:tag="unisdk_login_with_password"
                            android:textColor="@color/orangeApp" />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSendOTP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right|center_vertical"
                        android:text="@string/unisdk_send_otp"
                        android:tag="unisdk_send_otp"
                        android:textColor="@color/orangeApp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLoginWithPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtLoginWithOtp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto"
                            android:gravity="center_vertical"
                            android:tag="unisdk_login_with_otp"
                            android:text="@string/unisdk_login_with_otp"
                            android:textColor="@color/orangeApp" />
                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtForgotPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right|center_vertical"
                        android:text="@string/unisdk_forgot_password"
                        android:tag="unisdk_forgot_password"
                        android:textColor="@color/orangeApp" />

                </LinearLayout>
                <android.widget.Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/button_orange_5dp_corner_light_theme"
                    android:textAllCaps="false"
                    android:text="@string/unisdk_sign_in"
                    android:tag="unisdk_sign_in"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:text="@string/unisdk_or_login_with"
                    android:tag="unisdk_or_login_with"
                    android:textColor="@color/textColorUnitel"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgGoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_google" />

                    <ImageView
                        android:id="@+id/imgFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_facebook"
                        android:layout_marginStart="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/btnDontHaveAccountSingUp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@string/unisdk_dont_have_account"
                        android:tag="unisdk_dont_have_account"
                        android:textColor="@color/textColorUnitel"
                        android:textSize="16sp"
                        app:layout_constraintVertical_bias="0.029" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDontHaveAccountSingUp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="@string/unisdk_sign_up_html"
                        android:tag="unisdk_sign_up_html"
                        android:textColor="@color/orangeApp"
                        android:textSize="16sp"
                        app:layout_constraintVertical_bias="0.029"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:tag="binding_6"                                           
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.ttc.uniid.customview.SpinView
                android:layout_centerInParent="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         