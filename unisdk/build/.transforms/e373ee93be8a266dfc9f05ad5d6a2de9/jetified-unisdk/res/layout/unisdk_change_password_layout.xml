
                                                       
                                                   

    
                                          
                 
                            
                                                                                  
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image" android:tag="layout/unisdk_change_password_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/bg_border_view_login"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:clickable="true"
                android:id="@+id/layoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:tag="binding_1">

                <include layout="@layout/unisdk_layout_header_logo_uniid"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/unisdk_change_pass"
                    android:tag="unisdk_change_pass"
                    android:textColor="@color/orangeApp"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/tvUsername"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/unisdk_demo_email"
                    android:textColor="@color/textColorUnitel"
                    android:textSize="@dimen/_16sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/unisdk_generate_password"
                    android:tag="unisdk_generate_password"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_new_password"
                        android:tag="unisdk_new_password"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutPassword"
                        app:suffixTextColor="@color/colorButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/password"
                        android:background="@drawable/bg_border_edittext_10dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPassword"
                            android:theme="@style/WidgetTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/unisdk_hint_new_password"
                            android:tag="binding_2"               
                            android:inputType="textPassword"
                            android:maxLength="32"
                            android:background="@null"
                                                                 
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtPasswordError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:visibility="gone"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorButton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/roboto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_confirm_password"
                        android:tag="unisdk_confirm_password"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutConfirmPassword"
                        app:suffixTextColor="@color/colorButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/password"
                        app:suffixTextAppearance="@style/UniSDKTextApperance"
                        android:gravity="center"
                        android:background="@drawable/bg_border_edittext_10dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCfPassword"
                            android:theme="@style/WidgetTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/unisdk_hint_confirm_password"
                            android:tag="binding_3"                   
                            android:inputType="textPassword"
                            android:maxLength="32"
                            android:background="@null"
                                                                        
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtConfirmPasswordError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/roboto"
                        android:visibility="gone"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorButton" />

                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/button_orange_5dp_corner_light_theme"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/unisdk_next"
                    android:tag="unisdk_next"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:tag="binding_4"                                           
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.ttc.uniid.customview.SpinView
                android:layout_width="35dp"
                android:layout_height="35dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         