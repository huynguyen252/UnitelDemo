
                                                       
                                                   
    
                                           
                 
                            
                                                                            
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_image" android:tag="layout/unisdk_verify_phone_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.89"
            android:background="@drawable/bg_border_view_login"
            android:scrollbars="none">

            <LinearLayout
                android:clickable="true"
                android:id="@+id/viewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:tag="binding_1">

                <include layout="@layout/unisdk_layout_header_logo_uniid"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/unisdk_verify"
                    android:tag="unisdk_verify"
                    android:textColor="@color/orangeApp"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:text="@string/unisdk_verify_desc"
                    android:tag="unisdk_verify_desc"
                    android:textColor="@color/textColorUnitel"
                    android:textSize="@dimen/_16sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDesc"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/textColorUnitel"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:id="@+id/layoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/unisdk_phone_number"
                        android:tag="unisdk_phone_number"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_border_edittext_10dp"
                        android:gravity="center"
                        app:hintEnabled="false"
                        app:suffixTextColor="@color/colorButton">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:theme="@style/WidgetTheme"
                            android:id="@+id/edtPhoneNumber"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/unisdk_hint_phone_number_create"
                            android:tag="binding_2"                      
                            android:inputType="phone"
                            android:maxLength="13"
                                                              
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtPhoneNumberError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/colorButton"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLoginWithOTP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtLoginWithPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="left|center_vertical"
                        android:text="@string/unisdk_login_with_password"
                        android:tag="unisdk_login_with_password"
                        android:textColor="@color/orangeApp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSendOTP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right|center_vertical"
                        android:text="@string/unisdk_send_otp"
                        android:tag="unisdk_send_otp"
                        android:textColor="@color/orangeApp" />

                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/button_orange_5dp_corner_light_theme"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/unisdk_next"
                    android:tag="unisdk_next"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:tag="binding_3"                                           
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.ttc.uniid.customview.SpinView
                android:layout_centerInParent="true"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         